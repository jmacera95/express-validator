<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title></title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel='stylesheet' href='/stylesheets/style.css' />
    </head>
    <body>
        <form id="register-form" action="/users/register" method="POST" enctype="multipart/form-data">
            <h3>Regístrate</h3>
            <br>
            <div>
                <label for="name">Nombre</label>
                <input 
                    type="text" 
                    name="name" 
                    id="name" 
                    class="<%= locals.errors && locals.errors.name ? 'is-invalid' : null %>"
                    value="<%= locals.errors && locals.errors.name && locals.old.name ? locals.old.name : null %>"
                >
                <div class="text-danger">
                    <% if (locals.errors && locals.errors.name) { %>
                        <p class="feedback"><%= errors.name.msg %> </p>
                    <% } %>
                </div>
            </div>
            <br>
            <div>
                <label for="lastName">Apellido</label>
                <input 
                    type="text" 
                    name="lastName" 
                    id="lastName"
                    class="<%= locals.errors && locals.errors.lastName ? 'is-invalid' : null %>"
                    value="<%= locals.errors && locals.errors.lastName && locals.old.lastName ? locals.old.lastName : null %>"
                >
                <div class="text-danger">
                    <% if (locals.errors && locals.errors.lastName) { %>
                        <p class="feedback"><%= errors.lastName.msg %> </p>
                    <% } %>
                </div>
            </div>
            <br>
            <div>
                <label for="email">Email</label>
                <input 
                    type="email" 
                    name="email" 
                    id="email"
                    class="<%= locals.errors && locals.errors.email ? 'is-invalid' : null %>"
                    value="<%= locals.errors && locals.errors.email && locals.old.email ? locals.old.email : null %>"
                >
                <div class="text-danger">
                    <% if (locals.errors && locals.errors.email) { %>
                        <p class="feedback"><%= errors.email.msg %> </p>
                    <% } %>
                </div>
            </div>
            <br>
            <div>
                <label for="password">Contraseña</label>
                <input 
                    type="password" 
                    name="password" 
                    id="password"
                    class="<%= locals.errors && locals.errors.password ? 'is-invalid' : null %>"
                    value="<%= locals.errors && locals.errors.password && locals.old.password ? locals.old.password : null %>"
                >
                <div class="text-danger">
                    <% if (locals.errors && locals.errors.password) { %>
                        <p class="feedback"><%= errors.password.msg %> </p>
                    <% } %>
                </div>
            </div>
            <br>
            <div>
                <label for="img">Foto de Perfil</label>
                <input
                    type="file" 
                    name="img" 
                    id="img"
                    class="<%= locals.errors && locals.errors.img ? 'is-invalid' : null %>"
                >
                <div class="text-danger">
                    <% if (locals.errors && locals.errors.img) { %>
                        <p class="feedback"><%= errors.img.msg %> </p>
                    <% } %>
                </div>
            </div>
            <br>
            <div>
                <button type="submit">
                    Registrarse
                </button>
            </div>
        </form>
        
        <script src="" async defer></script>
    </body>
</html>